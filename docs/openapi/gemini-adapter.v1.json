{
  "openapi": "3.1.0",
  "info": {
    "title": "Axme Gemini Extension Adapter",
    "version": "0.1.0"
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Health",
        "operationId": "health_health_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GeminiAdapterHealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/adapt": {
      "post": {
        "summary": "Adapt",
        "operationId": "adapt_v1_adapt_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GeminiExtensionRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GeminiAdapterAdaptResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "GeminiAdapterAdaptResponse": {
        "properties": {
          "ok": {
            "type": "boolean",
            "const": true,
            "title": "Ok"
          },
          "decision_mode": {
            "type": "string",
            "enum": [
              "sent",
              "resolved",
              "needs_confirmation",
              "needs_disambiguation",
              "contact_not_found"
            ],
            "title": "Decision Mode"
          },
          "envelope": {
            "anyOf": [
              {
                "additionalProperties": true,
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "title": "Envelope"
          },
          "resolution": {
            "anyOf": [
              {
                "additionalProperties": true,
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "title": "Resolution"
          },
          "delivery": {
            "anyOf": [
              {
                "additionalProperties": true,
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "title": "Delivery"
          }
        },
        "type": "object",
        "required": [
          "ok",
          "decision_mode"
        ],
        "title": "GeminiAdapterAdaptResponse"
      },
      "GeminiAdapterHealthResponse": {
        "properties": {
          "ok": {
            "type": "boolean",
            "const": true,
            "title": "Ok"
          },
          "service": {
            "type": "string",
            "const": "gemini-extension-adapter",
            "title": "Service"
          }
        },
        "type": "object",
        "required": [
          "ok",
          "service"
        ],
        "title": "GeminiAdapterHealthResponse"
      },
      "GeminiExtensionRequest": {
        "properties": {
          "sender_agent": {
            "type": "string",
            "maxLength": 255,
            "minLength": 3,
            "title": "Sender Agent"
          },
          "recipient_agent": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 255,
                "minLength": 3
              },
              {
                "type": "null"
              }
            ],
            "title": "Recipient Agent"
          },
          "recipient_name": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 255,
                "minLength": 1
              },
              {
                "type": "null"
              }
            ],
            "title": "Recipient Name"
          },
          "intent": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 64,
                "minLength": 3
              },
              {
                "type": "null"
              }
            ],
            "title": "Intent"
          },
          "data": {
            "anyOf": [
              {
                "additionalProperties": true,
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "title": "Data"
          },
          "question": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 2000,
                "minLength": 1
              },
              {
                "type": "null"
              }
            ],
            "title": "Question"
          },
          "message": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 5000,
                "minLength": 1
              },
              {
                "type": "null"
              }
            ],
            "title": "Message"
          },
          "answer": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 5000,
                "minLength": 1
              },
              {
                "type": "null"
              }
            ],
            "title": "Answer"
          },
          "context": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 5000
              },
              {
                "type": "null"
              }
            ],
            "title": "Context"
          },
          "deadline_at": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Deadline At"
          },
          "status": {
            "anyOf": [
              {
                "type": "string",
                "enum": [
                  "answered",
                  "needs_clarification",
                  "declined",
                  "timeout"
                ]
              },
              {
                "type": "null"
              }
            ],
            "title": "Status"
          },
          "clarification_question": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 2000
              },
              {
                "type": "null"
              }
            ],
            "title": "Clarification Question"
          },
          "correlation_id": {
            "anyOf": [
              {
                "type": "string",
                "format": "uuid"
              },
              {
                "type": "null"
              }
            ],
            "title": "Correlation Id"
          },
          "idempotency_key": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 128,
                "minLength": 8
              },
              {
                "type": "null"
              }
            ],
            "title": "Idempotency Key"
          },
          "session_id": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 255
              },
              {
                "type": "null"
              }
            ],
            "title": "Session Id"
          },
          "tool_call_id": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 255
              },
              {
                "type": "null"
              }
            ],
            "title": "Tool Call Id"
          },
          "input_mode": {
            "type": "string",
            "enum": [
              "text",
              "voice"
            ],
            "title": "Input Mode",
            "default": "text"
          },
          "resolve_only": {
            "type": "boolean",
            "title": "Resolve Only",
            "default": false
          },
          "confirm_send": {
            "type": "boolean",
            "title": "Confirm Send",
            "default": false
          },
          "workflow_macro_id": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 255,
                "minLength": 3
              },
              {
                "type": "null"
              }
            ],
            "title": "Workflow Macro Id"
          },
          "workflow_macro_params": {
            "anyOf": [
              {
                "additionalProperties": true,
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "title": "Workflow Macro Params"
          },
          "workflow_owner_agent": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 255,
                "minLength": 3
              },
              {
                "type": "null"
              }
            ],
            "title": "Workflow Owner Agent"
          }
        },
        "type": "object",
        "required": [
          "sender_agent"
        ],
        "title": "GeminiExtensionRequest"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          },
          "input": {
            "title": "Input"
          },
          "ctx": {
            "type": "object",
            "title": "Context"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:8202"
    }
  ]
}
